[run]
source = src/
omit =
    src/__init__.py
    src/config.py
    src/container.py
    src/extensions.py
    src/app.py
    src/swagger.py
    src/*/__pycache__/*
    src/*/*/__pycache__/*
    src/utils/*

[report]
exclude_lines =
    pragma: no cover
    def __repr__
    raise NotImplementedError
    if __name__ == .__main__.:
    pass
    raise ImportError
    raise Exception
    except Exception as e:

[html]
directory = coverage_html